<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".fragments.FragmentPokemonDetail">

        <TextView
            android:id="@+id/pokemon_detail"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:textIsSelectable="true" />

        <ImageView
            android:id="@+id/iv_pokemon_photo"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="49dp" />

        <TextView
            android:id="@+id/detail_pokemon_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv_pokemon_photo"
            android:layout_alignStart="@+id/iv_pokemon_photo"
            android:layout_below="@+id/iv_pokemon_photo"
            android:text="Pokemon : "
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/detail_pokemon_national_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/detail_pokemon_nombre"
            android:layout_alignStart="@+id/detail_pokemon_nombre"
            android:layout_below="@+id/detail_pokemon_nombre"
            android:text="Id :"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/detail_pokemon_nombre_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/detail_pokemon_national_id"
            android:layout_alignStart="@+id/detail_pokemon_national_id"
            android:layout_below="@+id/detail_pokemon_national_id"
            android:text="Sex : "
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>
</ScrollView>